{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["DOM", "ES2015"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["react", "react-dom"]
  },
  "include": ["src", "src/**/*.test.ts", "src/**/*.test.tsx"],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" },
    { "path": "./tsconfig.test.json" }
  ]
}
